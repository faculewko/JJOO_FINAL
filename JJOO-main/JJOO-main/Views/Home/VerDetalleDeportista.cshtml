@{
    ViewBag.Title = "Detalle de Deportista";
    var dep = ViewBag.Deportista as TP_JJOO.Models.Deportista;
    var deporte = ViewBag.Deporte as TP_JJOO.Models.Deporte;
    var pais = ViewBag.Pais as TP_JJOO.Models.Pais;
}

<h2>@dep.Nombre @dep.Apellido</h2>
<img src="@dep.ImagenURL" alt="@dep.Nombre @dep.Apellido" class="img-fluid mb-4" style="max-height: 300px;">

<ul class="list-group">
    <li class="list-group-item"><strong>Deporte:</strong> <a href="@Url.Action("VerDetalleDeporte", "Home", new { idDeporte = deporte.IdDeporte })">@deporte.Nombre</a></li>
    <li class="list-group-item"><strong>País:</strong> <a href="@Url.Action("VerDetallePais", "Home", new { idPais = pais.IdPais })">@pais.Nombre</a></li>
</ul>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary mt-4">Volver al Inicio</a>
<a href="@Url.Action("EliminarDeportista", "Home", new { idDeportista = dep.IdDeportista })" class="btn btn-danger mt-4" 
   onclick="return confirm('¿Estás seguro de eliminar a este deportista?');">Eliminar Deportista</a>



   