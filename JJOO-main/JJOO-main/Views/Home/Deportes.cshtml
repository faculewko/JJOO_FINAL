@{
    ViewBag.Title = "Deportes";
    var deportes = ViewBag.Deportes as List<TP_JJOO.Models.Deporte>;
}

<h2>Listado de Deportes</h2>
<div class="row">
    @foreach(var deporte in deportes)
    {
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">@deporte.Nombre</h5>
                    <p class="card-text">@deporte.Descripcion</p>
                    <a href="@Url.Action("VerDetalleDeporte", "Home", new { idDeporte = deporte.IdDeporte })" class="btn btn-primary">Ver Detalles</a>
                </div>
            </div>
        </div>
    }
</div>