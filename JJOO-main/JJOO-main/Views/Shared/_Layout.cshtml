<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>TP_JJOO - @ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <style>
        
        .navbar-brand img {
            height: 30px;
            width: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="URL_DEL_LOGO_JJOO" alt="JJOO Logo" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Historia", "Home")">Historia</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Deportes", "Home")">Deportes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Paises", "Home")">Países</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AgregarDeportista", "Home")">Agregar Deportista</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Creditos", "Home")">Créditos</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-lg-start mt-4">
        <div class="text-center p-3">
            © @DateTime.Now.Year TP_JJOO
        </div>
    </footer>
</body>